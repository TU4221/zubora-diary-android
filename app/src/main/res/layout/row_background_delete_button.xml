<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_blank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5" />

    <ImageButton
        style="@style/AppImageButtonStyle"
        android:id="@+id/image_button_delete"
        android:contentDescription="@string/row_background_delete_button_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/colorError"
        android:src="@drawable/ic_delete_forever_24px"
        app:tint="?attr/colorOnError"/>

</LinearLayout>
