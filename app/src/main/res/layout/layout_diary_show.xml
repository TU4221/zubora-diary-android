<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.websarva.wings.android.zuboradiary.ui.model.diary.WeatherUi" />
        <import type="com.websarva.wings.android.zuboradiary.ui.model.state.LoadState" />
        <import type="com.websarva.wings.android.zuboradiary.ui.model.diary.DiaryUi" />
        <import type="com.websarva.wings.android.zuboradiary.ui.model.common.FilePathUi" />
        <variable
            name="diaryLoadState"
            type="LoadState&lt;DiaryUi>" />
        <variable
            name="isWeather2Visible"
            type="boolean" />
        <variable
            name="numVisibleDiaryItems"
            type="int" />
        <variable
            name="diaryImageFilePath"
            type="FilePathUi" />
    </data>

    <!-- MEMO:本レイアウトをincludeタグで参照する場合はincludeタグ使用先でスクロール機能を持たせること。 -->
    <!-- MEMO:FloatingActionButtonと重ならないようにpaddingBottomで調整すること。 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AppTextViewStyle"
                android:id="@+id/text_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTextViewTextAppearance"
                android:text="@string/layout_diary_show_weather"
                android:textSize="@dimen/layout_diary_show_small_text_size" />

            <TextView
                style="@style/AppTextViewStyle"
                android:id="@+id/text_weather_1_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTextViewTextAppearance"
                tools:text="@string/layout_diary_show_weather1_tools_value"
                android:textSize="@dimen/layout_diary_show_text_size"
                app:diaryWeather1Text="@{diaryLoadState}"/>

            <TextView
                style="@style/AppTextViewStyle"
                android:id="@+id/text_weather_slush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTextViewTextAppearance"
                android:text="@string/layout_diary_show_weather_slush"
                android:textSize="@dimen/layout_diary_show_text_size"
                android:visibility="@{isWeather2Visible ? View.VISIBLE : View.INVISIBLE}" />

            <TextView
                style="@style/AppTextViewStyle"
                android:id="@+id/text_weather_2_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTextViewTextAppearance"
                android:textSize="@dimen/layout_diary_show_text_size"
                android:visibility="@{isWeather2Visible ? View.VISIBLE : View.INVISIBLE}"
                app:diaryWeather2Text="@{diaryLoadState}"
                tools:text="@string/layout_diary_show_weather2_tools_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_diary_show_margin_top"
            android:orientation="horizontal">

            <TextView
                style="@style/AppTextViewStyle"
                android:id="@+id/text_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTextViewTextAppearance"
                android:text="@string/layout_diary_show_condition"
                android:textSize="@dimen/layout_diary_show_small_text_size" />

            <TextView
                style="@style/AppTextViewStyle"
                android:id="@+id/text_condition_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTextViewTextAppearance"
                tools:text="@string/layout_diary_show_condition_tools_value"
                android:textSize="@dimen/layout_diary_show_text_size"
                app:diaryConditionText="@{diaryLoadState}" />

        </LinearLayout>

        <!-- MEMO:ViewBindingを使用している為、tools:ignore="DuplicateIncludedIds"記述 -->
        <TextView
            style="@style/AppTextViewStyle"
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_diary_show_margin_top"
            android:textAppearance="@style/AppTextViewTextAppearance"
            android:text="@string/layout_diary_show_title"
            android:textSize="@dimen/layout_diary_show_small_text_size"
            tools:ignore="DuplicateIncludedIds" />

        <TextView
            style="@style/AppTextViewStyle"
            android:id="@+id/text_title_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_diary_show_small_margin_top"
            android:textAppearance="@style/AppTextViewTextAppearance"
            android:hint="@string/layout_diary_show_title_hint"
            android:textSize="@dimen/layout_diary_show_text_size"
            app:diaryTitleText="@{diaryLoadState}" />

        <include layout="@layout/layout_diary_show_item"
            android:id="@+id/include_item_1"
            app:itemNumber="@{@string/layout_diary_show_item_1}"
            app:itemNumberInt="@{1}"
            app:diaryLoadState="@{diaryLoadState}"
            app:numVisibleDiaryItems="@{numVisibleDiaryItems}" />

        <include layout="@layout/layout_diary_show_item"
            android:id="@+id/include_item_2"
            app:itemNumber="@{@string/layout_diary_show_item_2}"
            app:itemNumberInt="@{2}"
            app:diaryLoadState="@{diaryLoadState}"
            app:numVisibleDiaryItems="@{numVisibleDiaryItems}" />

        <include layout="@layout/layout_diary_show_item"
            android:id="@+id/include_item_3"
            app:itemNumber="@{@string/layout_diary_show_item_3}"
            app:itemNumberInt="@{3}"
            app:diaryLoadState="@{diaryLoadState}"
            app:numVisibleDiaryItems="@{numVisibleDiaryItems}" />

        <include layout="@layout/layout_diary_show_item"
            android:id="@+id/include_item_4"
            app:itemNumber="@{@string/layout_diary_show_item_4}"
            app:itemNumberInt="@{4}"
            app:diaryLoadState="@{diaryLoadState}"
            app:numVisibleDiaryItems="@{numVisibleDiaryItems}" />

        <!-- MEMO:ViewBindingを使用している為、tools:ignore="DuplicateIncludedIds"記述 -->
        <include layout="@layout/layout_diary_show_item"
            android:id="@+id/include_item_5"
            app:itemNumber="@{@string/layout_diary_show_item_5}"
            app:itemNumberInt="@{5}"
            app:diaryLoadState="@{diaryLoadState}"
            app:numVisibleDiaryItems="@{numVisibleDiaryItems}"
            tools:ignore="DuplicateIncludedIds" />

        <TextView
            style="@style/AppTextViewStyle"
            android:id="@+id/text_attached_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_diary_show_large_margin_top"
            android:layout_gravity="center_vertical"
            android:text="@string/layout_diary_show_attached_image"
            android:textAppearance="@style/AppTextViewTextAppearance"
            android:textSize="@dimen/layout_diary_show_small_text_size"
            android:visibility="@{diaryImageFilePath == null ? View.GONE : View.VISIBLE}" />

        <!-- MEMO:本レイアウトはincludeタグ使用先でスクロール機能を用意してもらう前提のため、警告"partially hidden in layout"
                  を"tools:ignore="VisualLintBounds""で無視する。 -->
        <com.websarva.wings.android.zuboradiary.ui.view.custom.ImageProgressView
            android:id="@+id/image_progress_attached_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_diary_show_small_margin_top"
            android:layout_gravity="center"
            android:visibility="@{diaryImageFilePath == null ? View.GONE : View.VISIBLE}"
            app:defaultIcon="@drawable/ic_image_24px"
            app:errorIcon="@drawable/ic_hide_image_24px"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:imageScaleType="fitCenter"
            app:imageContentDescription="@string/layout_diary_show_attached_image_description"
            app:imageAdjustViewBounds="true"
            app:imagePath="@{diaryImageFilePath.path}"
            tools:ignore="VisualLintBounds" />

        <TextView
            style="@style/AppTextViewStyle"
            android:id="@+id/text_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_diary_show_large_margin_top"
            android:layout_gravity="end"
            android:textAppearance="@style/AppTextViewTextAppearance"
            android:text="@string/layout_diary_show_last_update"
            android:textSize="@dimen/layout_diary_show_small_text_size"
            tools:ignore="VisualLintBounds" />

        <TextView
            style="@style/AppTextViewStyle"
            android:id="@+id/text_log_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAppearance="@style/AppTextViewTextAppearance"
            tools:text="@string/layout_diary_show_last_update_tools_value"
            android:textSize="@dimen/layout_diary_show_small_text_size"
            app:diaryLogText="@{diaryLoadState}"
            tools:ignore="VisualLintBounds" />

    </LinearLayout>

</layout>
