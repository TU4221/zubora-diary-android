<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="settingsViewModel"
            type="com.websarva.wings.android.zuboradiary.ui.settings.SettingsViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_full_screen_background"
            style="@style/BackgroundView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/material_toolbar_top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="?attr/colorSurfaceContainer"
                android:gravity="center"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:title="設定"
                app:titleCentered="true" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_settings_section_design"
                            android:text="@string/fragment_settings_section_title_design"
                            style="@style/SettingsSectionTextView"/>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider_theme_color_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <FrameLayout
                            android:id="@+id/frame_layout_theme_color_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/text_theme_color_setting_title"
                                android:text="@string/fragment_settings_item_title_theme_color"
                                app:drawableStartCompat="@drawable/ic_palette_24px"
                                style="@style/SettingsItemTextView" />

                            <TextView
                                android:id="@+id/text_theme_color_setting_value"
                                style="@style/SettingsItemValueTextView" />

                        </FrameLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider_section_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_settings_section_settings"
                            android:text="@string/fragment_settings_section_title_setting"
                            style="@style/SettingsSectionTextView" />

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider_calendar_start_day_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <FrameLayout
                            android:id="@+id/frame_layout_calendar_start_day_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/text_calendar_start_day_setting_title"
                                android:text="@string/fragment_settings_item_title_calendar_start_day"
                                app:drawableStartCompat="@drawable/ic_calendar_month_24"
                                style="@style/SettingsItemTextView" />

                            <TextView
                                android:id="@+id/text_calendar_start_day_setting_value"
                                style="@style/SettingsItemValueTextView" />

                        </FrameLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider_reminder_notification_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <FrameLayout
                            android:id="@+id/frame_layout_reminder_notification_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/text_reminder_notification_setting_title"
                                android:text="@string/fragment_settings_item_title_reminder_notification"
                                app:drawableStartCompat="@drawable/ic_notifications_24px"
                                style="@style/SettingsItemTextView" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_reminder_notification_setting_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/fragment_settings_item_layout_height"
                                    android:paddingVertical="@dimen/fragment_settings_item_padding_vertical"
                                    android:paddingHorizontal="@dimen/fragment_settings_item_padding_horizontal_between_items"
                                    tools:text="00:00"
                                    android:textSize="@dimen/fragment_settings_item_value_text_size"
                                    android:gravity="center_vertical|end"/>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/switch_reminder_notification_value"
                                    android:checked="@{settingsViewModel.isCheckedReminderNotificationLiveData}"
                                    style="@style/SettingsItemValueSwitch" />

                            </LinearLayout>


                        </FrameLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider_passcode_lock_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <FrameLayout
                            android:id="@+id/frame_layout_passcode_lock_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/text_passcode_lock_setting_title"
                                android:text="@string/fragment_settings_item_title_passcode_lock"
                                app:drawableStartCompat="@drawable/ic_lock_24px"
                                style="@style/SettingsItemTextView" />

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switch_passcode_lock_value"
                                android:checked="@{settingsViewModel.isCheckedPasscodeLockLiveData}"
                                style="@style/SettingsItemValueSwitch" />

                        </FrameLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider_getting_weather_information_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <FrameLayout
                            android:id="@+id/frame_layout_getting_weather_information_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/text_getting_weather_information_setting_title"
                                android:text="@string/fragment_settings_item_title_getting_weather_information"
                                app:drawableStartCompat="@drawable/ic_sunny_24px"
                                style="@style/SettingsItemTextView" />

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switch_getting_weather_information_value"
                                android:checked="@{settingsViewModel.isCheckedGettingWeatherInformationLiveData}"
                                style="@style/SettingsItemValueSwitch" />

                        </FrameLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider_section_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_settings_section_end"
                            style="@style/SettingsSectionTextView" />

                    </LinearLayout>

                </FrameLayout>

            </ScrollView>

        </LinearLayout>

    </FrameLayout>

</layout>
