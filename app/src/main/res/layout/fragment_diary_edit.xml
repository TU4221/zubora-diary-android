<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="diaryEditViewModel"
            type="com.websarva.wings.android.zuboradiary.ui.diary.diaryedit.DiaryEditViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            style="@style/AppFragmentBackgroundViewStyle"
            android:id="@+id/view_full_screen_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                style="@style/AppToolbarNavBackStyle"
                android:id="@+id/material_toolbar_top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/diary_edit_toolbar_menu"
                tools:title="@string/fragment_diary_edit_toolbar_title_value_tools" />

            <!-- TODO:最終的に削除 -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="TEST"/>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_full_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/view_nested_scroll_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/fragment_margin_horizontal"
                        android:layout_marginTop="@dimen/fragment_margin_vertical"
                        android:layout_marginBottom="@dimen/fragment_margin_bottom"
                        android:orientation="vertical">

                        <!-- 注意
                             日付入力欄はダイアログフラグメントを使用して入力する為、android:text は「1.」を記述する。
                             「2.」の双方向データバイディングを記述した場合、ダイアログで変数値を変更した時に Observer が2回起動する。

                             1. android:text="@{diaryEditViewModel.date}"
                             2. android:text="@={diaryEditViewModel.date}"
                              -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/AppTextInputLayoutOutlinedBoxStyle"
                            android:id="@+id/text_input_layout_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fragment_diary_edit_margin_top"
                            android:hint="@string/fragment_diary_edit_date">

                            <com.websarva.wings.android.zuboradiary.ui.diary.diaryedit.CustomTextInputEditText
                                style="@style/AppTextInputEditTextNoInputStyle"
                                android:id="@+id/text_input_edit_text_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/AppTextInputEditTextTextAppearance"
                                android:textSize="@dimen/fragment_diary_edit_text_size"
                                tools:text="@string/fragment_diary_edit_date_value_tools" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fragment_diary_edit_margin_top"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/AppTextViewStyle"
                                android:id="@+id/text_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fragment_diary_edit_weather"
                                android:textAppearance="@style/AppTextViewTextAppearance"
                                android:textSize="@dimen/fragment_diary_edit_text_size"
                                android:labelFor="@id/auto_complete_text_weather_1" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:id="@+id/text_input_layout_weather_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/fragment_diary_edit_margin_start"
                                android:layout_weight="1">

                                <AutoCompleteTextView
                                    style="@style/AppAutoCompleteTextViewDropDownStyle"
                                    android:id="@+id/auto_complete_text_weather_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/AppAutoCompleteTextViewDropDownTextAppearance"
                                    android:textColor="@color/text_color_on_surface"
                                    tools:text="@string/fragment_diary_edit_weather_value_tools" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                style="@style/AppTextViewStyle"
                                android:id="@+id/text_weather_slush"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/fragment_diary_edit_margin_start"
                                android:text="@string/fragment_diary_edit_weather_slush"
                                android:textAppearance="@style/AppTextViewTextAppearance"
                                android:textSize="@dimen/fragment_diary_edit_text_size"
                                android:labelFor="@id/auto_complete_text_weather_2" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/AppTextInputLayoutDropdownMenuStyle"
                                android:id="@+id/text_input_layout_weather_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/fragment_diary_edit_margin_start"
                                android:layout_weight="1" >

                                <!-- MEMO:"android:contentDescription"で代用-->
                                <AutoCompleteTextView
                                    android:id="@+id/auto_complete_text_weather_2"
                                    style="@style/AppAutoCompleteTextViewDropDownStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/AppAutoCompleteTextViewDropDownTextAppearance"
                                    android:textColor="@color/text_color_on_surface"
                                    tools:text="@string/fragment_diary_edit_weather_value_tools" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fragment_diary_edit_margin_top"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/AppTextViewStyle"
                                android:id="@+id/text_condition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fragment_diary_edit_condition"
                                android:textAppearance="@style/AppTextViewTextAppearance"
                                android:textSize="@dimen/fragment_diary_edit_text_size"
                                android:labelFor="@id/auto_complete_text_condition" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/AppTextInputLayoutDropdownMenuStyle"
                                android:id="@+id/text_input_layout_condition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/fragment_diary_edit_margin_start">

                                <AutoCompleteTextView
                                    style="@style/AppAutoCompleteTextViewDropDownStyle"
                                    android:id="@+id/auto_complete_text_condition"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/AppAutoCompleteTextViewDropDownTextAppearance"
                                    android:textColor="@color/text_color_on_surface"
                                    tools:text="@string/fragment_diary_edit_condition_value_tools" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/AppTextInputLayoutOutlinedBoxStyle"
                            android:id="@+id/text_input_layout_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fragment_diary_edit_margin_top"
                            android:hint="@string/fragment_diary_edit_title"
                            app:counterEnabled="true"
                            app:counterMaxLength="@integer/fragment_diary_edit_title_max_length">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/AppTextInputEditTextStyle"
                                android:id="@+id/text_input_edit_text_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/fragment_diary_edit_title_hint"
                                android:maxLength="@integer/fragment_diary_edit_title_max_length"
                                android:text="@={diaryEditViewModel.titleMutableLiveData}"
                                android:textAppearance="@style/AppTextInputEditTextTextAppearance"
                                android:textSize="@dimen/fragment_diary_edit_text_size" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <include
                            layout="@layout/layout_diary_edit_item"
                            android:id="@+id/include_item_1"
                            app:commentMutableLiveData="@{diaryEditViewModel.item1CommentMutableLiveData}"
                            app:itemNumber="@{@string/fragment_diary_edit_item_1}"
                            app:titleMutableLiveData="@{diaryEditViewModel.item1TitleMutableLiveData}" />

                        <include
                            layout="@layout/layout_diary_edit_item"
                            android:id="@+id/include_item_2"
                            app:commentMutableLiveData="@{diaryEditViewModel.item2CommentMutableLiveData}"
                            app:itemNumber="@{@string/fragment_diary_edit_item_2}"
                            app:titleMutableLiveData="@{diaryEditViewModel.item2TitleMutableLiveData}" />

                        <include
                            layout="@layout/layout_diary_edit_item"
                            android:id="@+id/include_item_3"
                            app:commentMutableLiveData="@{diaryEditViewModel.item3CommentMutableLiveData}"
                            app:itemNumber="@{@string/fragment_diary_edit_item_3}"
                            app:titleMutableLiveData="@{diaryEditViewModel.item3TitleMutableLiveData}" />

                        <include
                            layout="@layout/layout_diary_edit_item"
                            android:id="@+id/include_item_4"
                            app:commentMutableLiveData="@{diaryEditViewModel.item4CommentMutableLiveData}"
                            app:itemNumber="@{@string/fragment_diary_edit_item_4}"
                            app:titleMutableLiveData="@{diaryEditViewModel.item4TitleMutableLiveData}" />

                        <include
                            layout="@layout/layout_diary_edit_item"
                            android:id="@+id/include_item_5"
                            app:commentMutableLiveData="@{diaryEditViewModel.item5CommentMutableLiveData}"
                            app:itemNumber="@{@string/fragment_diary_edit_item_5}"
                            app:titleMutableLiveData="@{diaryEditViewModel.item5TitleMutableLiveData}" />

                        <ImageButton
                            style="@style/AppImageButtonStyle"
                            android:id="@+id/image_button_item_addition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/fragment_diary_edit_margin_top"
                            android:contentDescription="@string/fragment_diary_edit_item_addition"
                            android:src="@drawable/ic_add_circle_24px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fragment_diary_edit_margin_top"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/AppTextViewStyle"
                            android:id="@+id/text_attached_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/fragment_diary_edit_attached_picture"
                            android:textAppearance="@style/AppTextViewTextAppearance"
                            android:textSize="@dimen/fragment_diary_edit_text_size" />

                        <ImageButton
                            style="@style/AppImageButtonStyle"
                            android:id="@+id/image_button_attached_picture_delete"
                            android:layout_width="@dimen/fragment_diary_edit_delete_button_layout_width"
                            android:layout_height="@dimen/fragment_diary_edit_delete_button_layout_height"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_delete_forever_24px"
                            android:contentDescription="@string/fragment_diary_edit_attached_picture_delete"/>

                    </LinearLayout>

                    <ImageView
                        style="@style/AppImageViewStyle"
                        android:id="@+id/image_attached_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:background="@drawable/diary_edit_image_bg_rounded_rectangle_image"
                        android:src="@drawable/diary_edit_image_ic_photo_library_360px"
                        android:contentDescription="@string/fragment_diary_edit_attached_picture_attachment"
                        tools:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </FrameLayout>

</layout>
