<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="diaryEditViewModel"
            type="com.websarva.wings.android.zuboradiary.ui.diary.diaryedit.DiaryEditViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.diary.diaryedit.DiaryEditFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/material_toolbar_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="?attr/colorPrimary"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:menu="@menu/diary_edit_toolbar_menu"
            app:navigationIcon="@drawable/ic_arrow_back_24px"
            app:titleCentered="true"
            tools:title="@string/fragment_diary_edit_toolbar_title_tools_value"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="TEST"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_full_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <!-- 注意
                     日付入力欄はダイアログフラグメントを使用して入力する為、android:text は「@」の「1.」を記述する。
                     「2.」の双方向データバイディングを記述した場合、ダイアログで変数値を変更した時に Ovservr が2回起動する。

                     1. android:text="@{diaryEditViewModel.date}"
                     2. android:text="@={diaryEditViewModel.date}"
                      -->
                <EditText
                    android:id="@+id/edit_text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:lines="1"
                    android:textSize="20sp"
                    tools:text="@string/fragment_diary_edit_date_tools_value" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/text_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_diary_edit_weather"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_Weather_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_weather_slush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_diary_edit_weather_slush"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_Weather_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                     <TextView
                         android:id="@+id/text_condition"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/fragment_diary_edit_condition"
                         android:textSize="16sp" />

                     <Spinner
                         android:id="@+id/spinner_condition"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                 </LinearLayout>

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/fragment_diary_edit_title"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:lines="1"
                    android:text="@={diaryEditViewModel.titleMutableLiveData}"
                    android:hint="@string/fragment_diary_edit_title_hint"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_title_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_title" />

                <include layout="@layout/layout_diary_edit_item"
                    android:id="@+id/include_item_1"
                    android:itemNumber="@{@string/fragment_diary_edit_item_1}"
                    android:titleLiveData="@{diaryEditViewModel.item1TitleLiveData}"
                    android:commentMutableLiveData="@{diaryEditViewModel.item1CommentMutableLiveData}"/>

                <include layout="@layout/layout_diary_edit_item"
                    android:id="@+id/include_item_2"
                    android:itemNumber="@{@string/fragment_diary_edit_item_2}"
                    android:titleLiveData="@{diaryEditViewModel.item2TitleLiveData}"
                    android:commentMutableLiveData="@{diaryEditViewModel.item2CommentMutableLiveData}"/>

                <include layout="@layout/layout_diary_edit_item"
                    android:id="@+id/include_item_3"
                    android:itemNumber="@{@string/fragment_diary_edit_item_3}"
                    android:titleLiveData="@{diaryEditViewModel.item3TitleLiveData}"
                    android:commentMutableLiveData="@{diaryEditViewModel.item3CommentMutableLiveData}"/>

                <include layout="@layout/layout_diary_edit_item"
                    android:id="@+id/include_item_4"
                    android:itemNumber="@{@string/fragment_diary_edit_item_4}"
                    android:titleLiveData="@{diaryEditViewModel.item4TitleLiveData}"
                    android:commentMutableLiveData="@{diaryEditViewModel.item4CommentMutableLiveData}"/>

                <include layout="@layout/layout_diary_edit_item"
                    android:id="@+id/include_item_5"
                    android:itemNumber="@{@string/fragment_diary_edit_item_5}"
                    android:titleLiveData="@{diaryEditViewModel.item5TitleLiveData}"
                    android:commentMutableLiveData="@{diaryEditViewModel.item5CommentMutableLiveData}"/>

                <ImageButton
                    android:id="@+id/image_button_add_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_image_button"
                    android:src="@drawable/ic_add_circle_outline_24" />

                <ImageView
                    android:id="@+id/image_attach"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_rectangle"
                    android:src="@drawable/ic_photo_library_24px" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>
