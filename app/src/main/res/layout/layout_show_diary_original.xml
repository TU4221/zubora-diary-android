<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="diaryViewModel"
            type="com.websarva.wings.android.zuboradiary.ui.editdiary.DiaryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface">

        <TextView
            android:id="@+id/text_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/show_diary_weather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_weather_1_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{diaryViewModel.strWeather1}"
            android:hint="@string/show_diary_weather1_selected"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_weather"
            app:layout_constraintStart_toEndOf="@+id/text_weather" />

        <TextView
            android:id="@+id/text_weather_slush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_diary_weather_slush"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_weather_1_selected"
            app:layout_constraintStart_toEndOf="@+id/text_weather_1_selected" />

        <TextView
            android:id="@+id/text_weather_2_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{diaryViewModel.strWeather2}"
            android:hint="@string/show_diary_weather2_selected"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_weather_slush"
            app:layout_constraintStart_toEndOf="@+id/text_weather_slush" />

        <TextView
            android:id="@+id/text_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/show_diary_condition"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_weather_2_selected"
            app:layout_constraintStart_toEndOf="@+id/text_weather_2_selected" />

        <TextView
            android:id="@+id/text_condition_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{diaryViewModel.strCondition}"
            android:hint="@string/show_diary_selected_condition"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_condition"
            app:layout_constraintStart_toEndOf="@+id/text_condition" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.title}"
            android:hint="@string/show_diary_title"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_weather" />

        <TextView
            android:id="@+id/text_item_1_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[0].title}"
            android:hint="@string/show_diary_item_1"
            android:visibility="@{diaryViewModel.items[0].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title" />

        <View
            android:id="@+id/view_item_1_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            android:visibility="@{diaryViewModel.items[0].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_1_title" />

        <TextView
            android:id="@+id/text_item_1_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[0].comment}"
            android:hint="@string/show_diary_content_1"
            android:visibility="@{diaryViewModel.items[0].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_1_title" />

        <TextView
            android:id="@+id/text_item_2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[1].title}"
            android:hint="@string/show_diary_item_2"
            android:visibility="@{diaryViewModel.items[1].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_1_comment" />

        <View
            android:id="@+id/view_item_2_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            android:visibility="@{diaryViewModel.items[1].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_2_title" />

        <TextView
            android:id="@+id/text_item_2_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[1].comment}"
            android:hint="@string/show_diary_content_2"
            android:visibility="@{diaryViewModel.items[1].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_item_2_divider" />

        <TextView
            android:id="@+id/text_item_3_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[2].title}"
            android:hint="@string/show_diary_item_3"
            android:visibility="@{diaryViewModel.items[2].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_2_comment" />

        <View
            android:id="@+id/view_item_3_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            android:visibility="@{diaryViewModel.items[2].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_3_title" />

        <TextView
            android:id="@+id/text_item_3_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[2].comment}"
            android:hint="@string/show_diary_content_3"
            android:visibility="@{diaryViewModel.items[2].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_item_3_divider" />

        <TextView
            android:id="@+id/text_item_4_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[3].title}"
            android:hint="@string/show_diary_item_4"
            android:visibility="@{diaryViewModel.items[3].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_3_comment" />

        <View
            android:id="@+id/view_item_4_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            android:visibility="@{diaryViewModel.items[3].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_4_title" />

        <TextView
            android:id="@+id/text_item_4_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[3].comment}"
            android:hint="@string/show_diary_content_4"
            android:visibility="@{diaryViewModel.items[3].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_item_4_divider" />

        <TextView
            android:id="@+id/text_item_5_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[4].title}"
            android:hint="@string/show_diary_item_5"
            android:visibility="@{diaryViewModel.items[4].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_4_comment" />

        <View
            android:id="@+id/view_item_5_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            android:visibility="@{diaryViewModel.items[4].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_5_title" />

        <TextView
            android:id="@+id/text_item_5_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.items[4].comment}"
            android:hint="@string/show_diary_content_5"
            android:visibility="@{diaryViewModel.items[4].isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_item_5_divider" />

        <ImageView
            android:id="@+id/image_attached"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_5_comment" />

        <TextView
            android:id="@+id/text_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/show_diary_last_updated"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_log_value"
            app:layout_constraintEnd_toStartOf="@+id/text_log_value" />

        <TextView
            android:id="@+id/text_log_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="@{diaryViewModel.log}"
            android:hint="@string/show_diary_last_updated_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_attached" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
