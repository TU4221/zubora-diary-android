<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <!-- MEMO:DataBinding時のnameの定義はcamelCaseにすること。
                  上手くビルド(クラス生成)がされない不具合が発生する。
                  https://qiita.com/nanoyatsu/items/afad39a63d42d6fa3ac8 -->
        <variable
            name="diaryShowViewModel"
            type="com.websarva.wings.android.zuboradiary.ui.diary.diaryshow.DiaryShowViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.diary.diaryshow.DiaryShowFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/material_toolbar_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="?attr/colorPrimary"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:menu="@menu/diary_show_toolbar_menu"
            app:navigationIcon="@drawable/ic_arrow_back_24px"
            app:titleCentered="true"
            tools:title="@string/fragment_diary_show_toolbar_title"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_diary_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <include
                    android:id="@+id/include_diary_show"
                    layout="@layout/layout_diary_show"
                    app:diaryShowViewModel="@{diaryShowViewModel}" />

            </FrameLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
