<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <!-- MEMO:DataBinding時のnameの定義はcamelCaseにすること。
                  上手くビルド(クラス生成)がされない不具合が発生する。
                  https://qiita.com/nanoyatsu/items/afad39a63d42d6fa3ac8 -->
        <variable
            name="viewModel"
            type="com.websarva.wings.android.zuboradiary.ui.viewmodel.DiaryShowViewModel" />
    </data>

    <FrameLayout
        style="@style/AppRootViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                style="@style/AppAppBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.google.android.material.appbar.MaterialToolbar
                    style="@style/AppToolbarNavBackStyle"
                    android:id="@+id/material_toolbar_top_app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/fragment_diary_show_toolbar_title"
                    app:onNavigationIconClick="@{() -> viewModel.onNavigationIconClick()}"
                    app:menu="@menu/diary_show_toolbar_menu"
                    app:applySystemInsetsToPaddingLeft="@{true}"
                    app:applySystemInsetsToPaddingRight="@{true}" />

            </com.google.android.material.appbar.AppBarLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/material_divider_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.core.widget.NestedScrollView
                style="@style/AppNestedScrollViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/fragment_padding_horizontal"
                    android:paddingVertical="@dimen/fragment_padding_vertical"
                    android:orientation="vertical"
                    app:applySystemInsetsToPaddingLeft="@{true}"
                    app:applySystemInsetsToPaddingRight="@{true}"
                    app:applySystemInsetsToPaddingBottom="@{true}" >

                    <TextView
                        style="@style/AppTextViewStyle"
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/fragment_diary_show_margin_bottom"
                        android:textAppearance="@style/AppTextViewTextAppearance"
                        android:textSize="@dimen/fragment_diary_show_text_size"
                        app:diaryDateText="@{viewModel.uiState.diaryLoadState}"
                        tools:text="@string/fragment_diary_show_date"/>

                    <include
                        layout="@layout/layout_diary_show"
                        android:id="@+id/include_diary_show"
                        app:diaryLoadState="@{viewModel.uiState.diaryLoadState}"
                        app:isWeather2Visible="@{viewModel.uiState.weather2Visible}"
                        app:numVisibleDiaryItems="@{viewModel.uiState.numVisibleDiaryItems}"
                        app:diaryImageFilePath="@{viewModel.uiState.diaryImageFilePath}" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </FrameLayout>

</layout>
