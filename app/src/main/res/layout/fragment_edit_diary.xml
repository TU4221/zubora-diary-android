                    app:layout_constraintStart_toEndOf="@+id/text_item_5"
                    app:layout_constraintTop_toTopOf="@+id/text_item_5" />

                <!-- 下記 EditText は他フラグメントから入力する為、android:text は単一方向データバインディングとする。 -->
                <EditText
                    android:id="@+id/edit_text_item_5_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@{edit_diary_view_model.items[4].title}"
                    android:hint="@string/edit_diary_item_hint"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:visibility="@{edit_diary_view_model.items[4].isVisible ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_item_5" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nested_scroll_item_5_comment"
                    android:layout_width="0dp"
                    android:layout_height="108dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/border_gray"
                    android:scrollbarDefaultDelayBeforeFade="3000"
                    android:scrollbarFadeDuration="500"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@android:color/darker_gray"
                    android:scrollbars="vertical"
                    android:visibility="@{edit_diary_view_model.items[4].isVisible ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_item_5_title">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edit_text_item_5_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="start|top"
                            android:text="@={edit_diary_view_model.items[4].comment}"
                            android:hint="@string/edit_diary_content_hint"
                            android:inputType="textMultiLine"
                            android:minLines="5"
                            android:textSize="16sp"
                            android:visibility="@{edit_diary_view_model.items[4].isVisible ? View.VISIBLE : View.GONE}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>

                <TextView
                    android:id="@+id/text_item_5_comment_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/edit_diary_num_of_char"
                    android:visibility="@{edit_diary_view_model.items[4].isVisible ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nested_scroll_item_5_comment" />


                <ImageButton
                    android:id="@+id/image_button_add_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_add_circle_outline_24"
                    android:background="@drawable/bg_image_button"
                    android:visibility="@{edit_diary_view_model.items[4].isVisible ? View.GONE : View.VISIBLE}"
                    android:onClick="@{(view) -> edit_diary_view_model.onClickAddItemButton(view)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_item_5_comment_length" />

                <ImageView
                    android:id="@+id/image_attach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_gray"
                    android:src="@drawable/ic_image_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_button_add_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_child"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
