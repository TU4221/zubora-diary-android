<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="edit_diary_view_model"
            type="com.websarva.wings.android.zuboradiary.ui.editdiary.DiaryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        tools:context=".ui.editdiary.EditDiaryFragment">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_full_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 注意
                     日付入力欄はダイアログフラグメントを使用して入力する為、android:text は「@」の「1.」を記述する。
                     「2.」の双方向データバイディングを記述した場合、ダイアログで変数値を変更した時に Ovservr が2回起動する。

                     1. android:text="@{edit_diary_view_model.date}"
                     2. android:text="@={edit_diary_view_model.date}"
                      -->
                <EditText
                    android:id="@+id/edit_text_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:text="@{edit_diary_view_model.date}"
                    android:hint="@string/edit_diary_date_hint"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:lines="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/edit_diary_weather"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_date" />

                <Spinner
                    android:id="@+id/spinner_Weather_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/edit_diary_weather_selection"
                    app:layout_constraintBaseline_toBaselineOf="@+id/text_weather"
                    app:layout_constraintStart_toEndOf="@+id/text_weather" />

                <TextView
                    android:id="@+id/text_weather_slush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_diary_weather_slush"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/spinner_Weather_1"
                    app:layout_constraintStart_toEndOf="@+id/spinner_Weather_1" />

                <Spinner
                    android:id="@+id/spinner_Weather_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/edit_diary_weather_selection"
                    app:layout_constraintBaseline_toBaselineOf="@+id/spinner_Weather_1"
                    app:layout_constraintStart_toEndOf="@+id/text_weather_slush" />

                <TextView
                    android:id="@+id/text_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/edit_diary_condition"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_weather" />

