<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="word_search_view_model"
            type="com.websarva.wings.android.zuboradiary.ui.list.wordsearch.WordSearchViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.list.wordsearch.WordSearchFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/material_toolbar_top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:gravity="center"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/ic_arrow_back_24px"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text_for_search">
                <EditText
                    android:id="@+id/edit_text_key_word_search"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:inputType="text"
                    android:text="@={word_search_view_model.searchWord}"
                    android:hint="キーワード検索"
                    android:background="@null"
                    android:textSize="16sp"/>
                <ImageButton
                    android:id="@+id/image_button_key_word_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:paddingHorizontal="8dp"
                    android:src="@drawable/ic_cancel_24px"
                    android:background="@null"
                    android:visibility="@{word_search_view_model.isVisibleSearchWordClearButton ? View.VISIBLE : View.INVISIBLE}"/>
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_word_search_no_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{word_search_view_model.isVisibleNoResultMessage ? View.VISIBLE : View.GONE}"
                android:text="@string/word_search_no_results_comment"
                android:gravity="center_horizontal"
                android:paddingTop="100dp" />

            <LinearLayout
                android:id="@+id/liner_layout_word_search_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{word_search_view_model.isVisibleResults ? View.VISIBLE : View.GONE}">

                <TextView
                    android:id="@+id/text_word_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{Integer.toString(word_search_view_model.resultNum) + @string/word_search_results_num_comment}"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_word_search_results"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none" />

                    <TextView
                        android:id="@+id/text_header_section_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0000年00月"
                        android:background="?attr/colorPrimaryContainer" />

                </FrameLayout>

                <ProgressBar
                    android:id="@+id/progress_bar_word_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorSurface"
                    android:visibility="@{word_search_view_model.isLoading ? View.VISIBLE : View.GONE}" />

            </LinearLayout>

            <View
                android:id="@+id/view_for_hiding_keyboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

    </LinearLayout>

</layout>
