<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="word_search_view_model"
            type="com.websarva.wings.android.zuboradiary.ui.list.wordsearch.WordSearchViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            style="@style/FragmentBackgroundViewStyle"
            android:id="@+id/view_full_screen_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.MaterialToolbar
                    style="@style/ToolbarStyle"
                    android:id="@+id/material_toolbar_top_app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:navigationIcon="@drawable/ic_arrow_back_24px" />

                <LinearLayout
                    android:id="@+id/liner_layout_key_word_search_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_edit_text_for_search">

                    <EditText
                        android:id="@+id/edit_text_key_word_search"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:inputType="text"
                        android:text="@={word_search_view_model.searchWordMutableLiveData}"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:hint="@string/fragment_word_search_input_field_hint"
                        android:background="@null"
                        android:textSize="16sp" />

                    <ImageButton
                        style="@style/ImageButtonStyle"
                        android:id="@+id/image_button_key_word_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/ic_cancel_24px" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/TextViewStyle"
                    android:id="@+id/text_word_search_no_results"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/TextViewTextAppearance"
                    android:text="@string/fragment_word_search_no_results_message"
                    android:gravity="center_horizontal"
                    android:paddingTop="100dp"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/liner_layout_word_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    tools:visibility="visible" >

                    <TextView
                        style="@style/TextViewStyle"
                        android:id="@+id/text_word_search_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextViewTextAppearance"
                        android:text="@{Integer.toString(word_search_view_model.numWordSearchResults) + @string/fragment_word_search_num_results_message}"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp"
                        android:visibility="invisible"
                        tools:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        style="@style/DiaryListRecyclerViewStyle"
                        android:id="@+id/recycler_word_search_result_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <include
                    android:id="@+id/include_progress_indicator"
                    layout="@layout/layout_full_screen_circular_progress_indicator"
                    android:isVisibleLiveData="@{word_search_view_model.isVisibleUpdateProgressBarLiveData}" />

            </FrameLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="?attr/floatingActionButtonSmallSurfaceStyle"
            android:id="@+id/fab_top_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/fab_margin_end"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:src="@drawable/ic_arrow_upward_24px"
            android:contentDescription="@string/fragment_word_search_fab_top_scroll" />

    </FrameLayout>

</layout>
