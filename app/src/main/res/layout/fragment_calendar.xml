<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- MEMO:DataBinding時のnameの定義はcamelCaseにすること。
                  上手くビルド(クラス生成)がされない不具合が発生する。
                  https://qiita.com/nanoyatsu/items/afad39a63d42d6fa3ac8 -->
        <variable
            name="diaryViewModel"
            type="com.websarva.wings.android.zuboradiary.ui.editdiary.EditDiaryViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.calendar.CalendarFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">

            <!--<CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                app:layout_scrollFlags="scroll|enterAlways" />-->

            <com.kizitonwose.calendar.view.CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cv_dayViewResource="@layout/calendar_day"
                app:cv_monthHeaderResource="@layout/calendar_header"
                android:background="?attr/colorSurface"
                app:layout_scrollFlags="scroll|enterAlways" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_full_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/layout_show_diary_original"
                    app:diaryViewModel="@{diaryViewModel}" />

                <TextView
                    android:id="@+id/text_no_diary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurface"
                    android:text="日記がありません。"
                    android:gravity="center_horizontal|top"
                    android:paddingTop="16dp"/>

            </FrameLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/float_action_button_edit_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom|end"
            android:src="@android:drawable/ic_menu_edit"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>




