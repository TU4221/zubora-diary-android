<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemNumber"
            type="java.lang.String" />
        <variable
            name="titleLiveData"
            type="androidx.lifecycle.LiveData&lt;String>" />
        <variable
            name="commentMutableLiveData"
            type="androidx.lifecycle.MutableLiveData&lt;String>" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_layout_edit_diary_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutDescription="@xml/layout_edit_diary_item_scene">

        <LinearLayout
            android:id="@+id/liner_layout_edit_diary_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <!--
                android:visibility="@{item.isVisible ? View.VISIBLE : View.GONE}"
           MEMO:Visibilityを操作すると対象Viewの下にあるViewがちらつくので使用しない。
                背景が無色かつ、Transitionで高さを最小値にすれば、Visibility使用せずとも対象Viewを
                非表示にすることができるので今回はこれで対応。
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{itemNumber}"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/image_button_item_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_image_button"
                    android:src="@drawable/ic_delete_forever_24" />

            </LinearLayout>

            <!-- 下記 EditText は項目タイトル入力フラグメントから入力する為、android:text は単一方向データバインディングとする。 -->
            <EditText
                android:id="@+id/edit_text_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:focusable="false"
                android:hint="@string/fragment_edit_diary_item_hint"
                android:text="@{titleLiveData}"
                android:textSize="16sp" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_item_comment"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/border_gray"
                android:scrollbarDefaultDelayBeforeFade="3000"
                android:scrollbarFadeDuration="500"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="insideInset"
                android:scrollbarThumbVertical="@android:color/darker_gray"
                android:scrollbars="vertical" >

                <EditText
                    android:id="@+id/edit_text_item_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/fragment_edit_diary_content_hint"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:text="@={commentMutableLiveData}"
                    android:textSize="16sp" />

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/text_item_comment_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:hint="@string/fragment_edit_diary_num_of_char_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nested_scroll_item_comment" />

        </LinearLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>

