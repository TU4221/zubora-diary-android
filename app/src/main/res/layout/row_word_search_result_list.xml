<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liner_layout_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    android:orientation="horizontal"
    android:baselineAligned="false"
    tools:background="?attr/colorSecondaryContainer">

    <include
        android:id="@+id/include_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        layout="@layout/layout_day"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/text_word_search_result_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/row_word_search_result_list_title_hint"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_word_search_result_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/row_word_search_result_list_item_hint"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_word_search_result_title" />

        <TextView
            android:id="@+id/text_word_search_result_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/row_word_search_result_list_item_title_hint"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_word_search_result_item_number"
            app:layout_constraintTop_toBottomOf="@+id/text_word_search_result_title" />

        <TextView
            android:id="@+id/text_word_search_result_item_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:hint="@string/row_word_search_result_list_item_comment_hint"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_word_search_result_item_number"
            app:layout_constraintTop_toBottomOf="@+id/text_word_search_result_item_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
