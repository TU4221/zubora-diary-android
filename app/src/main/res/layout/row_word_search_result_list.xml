<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DiaryDayListBackgroundLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/row_word_search_result_list_layout_margin_horizontal_between_items"
    android:layout_marginTop="@dimen/row_word_search_result_list_layout_margin_vertical_between_items"
    android:minHeight="@dimen/row_diary_day_list_height"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <include
        layout="@layout/layout_diary_list_item_day"
        android:id="@+id/include_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            style="@style/DiaryDayListTextViewStyle"
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/row_word_search_result_list_views_layout_margin"
            android:textAppearance="@style/DiaryListDayTextAppearance"
            android:textSize="20sp"
            android:hint="@string/row_word_search_result_list_title_hint"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/DiaryDayListTextViewStyle"
            android:id="@+id/text_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/row_word_search_result_list_views_layout_margin"
            android:textAppearance="@style/DiaryListDayTextAppearance"
            android:textSize="16sp"
            android:hint="@string/row_word_search_result_list_item_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title" />

        <TextView
            style="@style/DiaryDayListTextViewStyle"
            android:id="@+id/text_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/row_word_search_result_list_views_layout_margin"
            android:layout_marginTop="@dimen/row_word_search_result_list_views_layout_margin"
            android:textAppearance="@style/DiaryListDayTextAppearance"
            android:textSize="16sp"
            android:hint="@string/row_word_search_result_list_item_title_hint"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_item_number"
            app:layout_constraintTop_toBottomOf="@+id/text_title" />

        <TextView
            style="@style/DiaryDayListTextViewStyle"
            android:id="@+id/text_item_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/row_word_search_result_list_views_layout_margin"
            android:layout_marginVertical="@dimen/row_word_search_result_list_views_layout_margin"
            android:maxLines="4"
            android:ellipsize="end"
            android:textAppearance="@style/DiaryListDayTextAppearance"
            android:textSize="14sp"
            android:hint="@string/row_word_search_result_list_item_comment_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_item_number"
            app:layout_constraintTop_toBottomOf="@+id/text_item_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
