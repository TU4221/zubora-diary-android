<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="settingIcon"
            type="android.graphics.drawable.Drawable" />
        <variable
            name="settingTitle"
            type="String" />
        <variable
            name="settingValue"
            type="java.lang.Object" />
        <variable
            name="settingValueVisibility"
            type="int" />
        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/SettingsItemLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/fragment_settings_section_layout_min_height"
        android:onClickListener="@{onClickListener}"
        app:applySystemInsetsToPaddingLeft="@{true}"
        app:applySystemInsetsToPaddingRight="@{true}">

        <!-- HACK:警告で"android:drawableStart"から"app:drawableStartCompat"に変更するように促されるが、
                  "app:drawableStartCompat"はリソースしか受け付けない為、"android:drawableStart"を使用
                  この警告は"android:drawableStart"がAPIレベルが27以上でないと対応してないことから起きており、
                  本アプリはAPIレベル21が対応最小レベルとなるのでこのまま使用する。 -->
        <!-- MEMO:ViewBindingを使用している為、tools:ignore="DuplicateIncludedIds"記述 -->
        <TextView
            android:id="@+id/text_title"
            style="@style/SettingsItemTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{settingTitle}"
            android:textAppearance="@style/SettingsItemTextViewTextAppearance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:drawableStartCompat="@{settingIcon}"
            tools:drawableStart="@drawable/ic_settings_24px"
            tools:ignore="DuplicateIncludedIds"
            tools:text="@string/layout_settings_item_title_tools_value" />

        <!-- MEMO:ViewBindingを使用している為、tools:ignore="DuplicateIncludedIds"記述 -->
        <TextView
            android:id="@+id/text_value"
            style="@style/SettingsItemValueTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/SettingsItemValueTextViewTextAppearance"
            android:visibility="@{settingValueVisibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:settingValueText="@{settingValue}"
            tools:ignore="DuplicateIncludedIds" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

