<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/frame_layout_row_diary_day_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/row_background_delete_button"
            android:id="@+id/include_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/liner_layout_foreground"
            style="@style/DiaryListDayStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="horizontal">

            <include
                android:id="@+id/include_day"
                layout="@layout/layout_diary_list_item_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_row_diary_list_day_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="@string/row_diary_day_list_title_hint"
                android:textAppearance="@style/DiaryListDayTextAppearance"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_row_diary_list_day_picture"
                style="@style/DiaryListDayStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/row_diary_day_list_picture_description"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:srcCompat="@drawable/ic_image_24px" />

        </LinearLayout>

    </FrameLayout>
</layout>

