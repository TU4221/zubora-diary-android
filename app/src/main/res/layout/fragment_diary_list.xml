<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.websarva.wings.android.zuboradiary.ui.model.DiaryListStatus" />
        <variable
            name="list_view_model"
            type="com.websarva.wings.android.zuboradiary.ui.viewmodel.DiaryListViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            style="@style/AppFragmentBackgroundViewStyle"
            android:id="@+id/view_full_screen_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                style="@style/AppToolbarStyle"
                android:id="@+id/material_toolbar_top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/diary_list_toolbar_menu"
                app:navigationIcon="@drawable/ic_calendar_month_24px"
                app:navigationContentDescription="@string/fragment_diary_list_toolbar_navigation_top_year_month_switching"
                app:onNavigationIconClick="@{() -> list_view_model.onNavigationClicked()}"
                app:title="@string/fragment_diary_list_toolbar_title"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/AppTextViewStyle"
                    android:id="@+id/text_no_diary_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/AppTextViewTextAppearance"
                    android:text="@string/fragment_diary_list_no_saved_diary_message"
                    android:gravity="center"
                    android:visibility="@{list_view_model.diaryListStatus instanceof DiaryListStatus.NoResults ? View.VISIBLE : View.INVISIBLE}"
                    tools:visibility="visible"/>

                <!-- MEMO:スクロールバーを表示させたいが、子RecyclerViewに反応してスクロールバーの長さが安定しない。
                          その為、"android:scrollbars="none"" とする。 -->
                <androidx.recyclerview.widget.RecyclerView
                    style="@style/DiaryListRecyclerViewStyle"
                    android:id="@+id/recycler_diary_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{!(list_view_model.diaryListStatus instanceof DiaryListStatus.NoResults) ? View.VISIBLE : View.INVISIBLE}"
                    android:scrollbars="none"
                    tools:visibility="visible"/>

                <include
                    layout="@layout/layout_full_screen_circular_progress_indicator"
                    android:id="@+id/include_progress_indicator"
                    app:isVisibleStateFlow="@{list_view_model.isVisibleUpdateProgressBar}" />

            </FrameLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/AppMainFloatingActionButtonStyle"
            android:id="@+id/floating_action_button_diary_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/fab_margin_end"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:src="@drawable/ic_edit_24px"
            android:contentDescription="@string/fragment_diary_list_fab_new_diary_creation"
            android:enabled="@{!(list_view_model.diaryListStatus instanceof DiaryListStatus.Updating) ? true : false}"
            android:onClick="@{() -> list_view_model.onDiaryEditButtonClicked()}"/>

    </FrameLayout>


</layout>
