<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="list_view_model"
            type="com.websarva.wings.android.zuboradiary.ui.list.diarylist.DiaryListViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            style="@style/FragmentBackgroundViewStyle"
            android:id="@+id/view_full_screen_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                style="@style/ToolbarStyle"
                android:id="@+id/material_toolbar_top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/diary_list_toolbar_menu"
                app:navigationIcon="@drawable/ic_calendar_month_24"
                app:navigationContentDescription="@string/fragment_diary_list_toolbar_navigation_top_year_month_switching"
                app:title="@string/fragment_diary_list_toolbar_title"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/TextViewStyle"
                    android:id="@+id/text_diary_list_no_diary_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/TextViewTextAppearance"
                    android:text="@string/fragment_diary_list_no_saved_diary_message"
                    android:gravity="center"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

                <androidx.recyclerview.widget.RecyclerView
                    style="@style/DiaryListRecyclerViewStyle"
                    android:id="@+id/recycler_diary_year_month_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

                <include
                    android:id="@+id/include_progress_indicator"
                    layout="@layout/layout_full_screen_circular_progress_indicator"
                    android:isVisibleLiveData="@{list_view_model.isVisibleUpdateProgressBarLiveData}" />

            </FrameLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/fab_margin_end"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:src="@drawable/ic_edit_24px"
            android:contentDescription="@string/fragment_diary_list_fab_new_diary_creation" />

    </FrameLayout>


</layout>
