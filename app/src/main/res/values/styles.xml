    </style>

    <style name="MaterialTimePickerThemeColorBlack" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorBlack</item>
    </style>

    <style name="MaterialTimePickerThemeColorRed" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorRed</item>
    </style>

    <style name="MaterialTimePickerThemeColorBlue" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorBlue</item>
    </style>

    <style name="MaterialTimePickerThemeColorGreen" parent="ThemeOverlay.Material3.MaterialTimePicker">
