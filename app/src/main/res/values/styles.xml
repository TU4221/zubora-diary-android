<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common -->
    <!-- *************************************************************************************** -->
    <!-- View -->
    <!-- MEMO:Viewのデフォルトスタイルなし -->
    <style name="AppFragmentBackgroundViewStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <!-- MEMO:Layout系のデフォルトスタイルなし -->
    <style name="FragmentBackgroundLayoutStyle" parent="AppFragmentBackgroundViewStyle">
    </style>


    <!-- Toolbar -->
    <!-- MEMO:Rippleの色、Tooltipsの背景色の変更方法が不明の為、AppThemeColorBlackのparentをDarkThemeにして対応。-->
    <style name="AppToolbarStyle" parent="Widget.Material3.Toolbar.Surface">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleCentered">true</item>
        <item name="popupTheme">@style/AppToolbarPopupMenuStyle</item>
    </style>
    <style name="AppToolbarNavBackStyle" parent="AppToolbarStyle">
        <item name="navigationIcon">@drawable/ic_arrow_back_24px</item>
    </style>
    <!-- MEMO:AppのThemeがLightモードの為、PopupMenuの文字が背景と同色になってしまい見えなくなる。対策として下記Style用意-->
    <style name="AppToolbarPopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:textColor">@color/text_color_on_surface</item>
    </style>


    <!-- TextView -->
    <style name="AppTextViewStyle" parent="Widget.AppCompat.TextView">
        <!-- HACK:"android:textColorHint"はTextAppearanceでは反映されない為、Styleに記述 -->
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>
    </style>
    <style name="AppTextViewTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_color_on_surface</item>
        <!--<item name="android:textColorHint">@color/text_hint_color_on_background</item>-->
    </style>

    <style name="AppDropDownTextViewStyle" parent="AppTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>
    <style name="AppDropDownTextViewTextAppearance" parent="AppTextViewTextAppearance">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>


    <!-- TextInputLayout -->
    <style name="AppTextInputLayoutOutlinedBoxStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="expandedHintEnabled">false</item>
        <item name="endIconTint">?colorOnSurfaceVariant</item>
    </style>

    <style name="AppTextInputLayoutDropdownMenuStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="expandedHintEnabled">false</item>
    </style>


    <!-- TextInputEditText -->
    <style name="AppTextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <!-- HACK:下記属性はTextAppearanceでは反映されない為、Styleに記述 -->
        <item name="android:textColor">@color/text_color_on_surface</item>
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="AppTextInputEditTextMultiLineStyle" parent="AppTextInputEditTextStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>
    <style name="AppTextInputEditTextNoInputStyle" parent="AppTextInputEditTextStyle">
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
    </style>
    <style name="AppTextInputEditTextTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <!-- HACK:下記属性はTextAppearanceでは反映されない為、Styleに記述 -->
        <!--
        <item name="android:textColor">@color/text_color_on_surface</item>
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>
        -->
    </style>


    <!-- AutoCompleteTextView -->
    <style name="AppAutoCompleteTextViewDropDownStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">none</item>
    </style>
    <style name="AppAutoCompleteTextViewDropDownTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">@dimen/fragment_diary_edit_text_size</item>
        <!-- HACK:"android:textColor"、"android:textColorHint"はStyle、TextAppearanceでは反映されない為、layoutに記述 -->
    </style>


    <!-- CircularProgressIndicator -->
    <style name="AppMediumCircularProgressIndicatorStyle" parent="Widget.Material3.CircularProgressIndicator.Medium">
        <item name="android:indeterminate">true</item>
    </style>

    <!-- Button -->
    <style name="AppTonalButtonStyle" parent="Widget.Material3.Button.TonalButton">
    </style>

    <!-- ImageButton -->
    <style name="AppImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/bg_image_button</item>
        <item name="tint">?attr/colorOnSurfaceVariant</item>
    </style>


    <!-- ImageView -->
    <!-- MEMO:ImageViewのデフォルトスタイルなし -->
    <style name="AppImageViewStyle">
    </style>


    <!-- FloatingActionButton -->
    <style name="AppMainFloatingActionButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
    </style>

    <style name="AppSubFloatingActionButtonStyle" parent="Widget.Material3.FloatingActionButton.Surface">
    </style>

    <!-- RecyclerView -->
    <!-- MEMO:RecyclerViewのデフォルトスタイルなし -->
    <style name="AppRecyclerViewStyle">
        <item name="android:transitionGroup">true</item>
    </style>

    <!-- *************************************************************************************** -->


    <!-- DiaryListFragment、WordSearchFragment -->
    <!-- *************************************************************************************** -->
    <style name="DiaryListRecyclerViewStyle" parent="AppRecyclerViewStyle">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="DiaryYearMonthListSectionTextViewStyle" parent="AppTextViewStyle">
        <item name="android:background">?attr/colorSecondary</item>
    </style>
    <style name="DiaryListYearMonthSectionTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <!-- MEMO:Viewのデフォルトスタイルなし -->
    <style name="DiaryDayListBackgroundViewStyle">
        <item name="android:background">?attr/colorSecondaryContainer</item>
    </style>

    <!-- MEMO:Layout系のデフォルトスタイルなし -->
    <style name="DiaryDayListBackgroundLayoutStyle" parent="DiaryDayListBackgroundViewStyle">
    </style>

    <style name="DiaryDayListTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColorHint">@color/hint_text_color_on_secondary_container</item>
    </style>
    <style name="DiaryListDayTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_color_on_secondary_container</item>
    </style>

    <style name="DiaryDayListImageViewStyle" parent="AppImageViewStyle">
    </style>

    <!-- 検索バー -->
    <style name="WordSearchTextViewStyle" parent="AppTextViewStyle">
        <!-- HACK:"android:textColorHint"はTextAppearanceでは反映されない為、Styleに記述 -->
        <item name="android:textColorHint">@color/hint_text_color_on_secondary_container</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@null</item>
    </style>
    <style name="WordSearchTextViewTextAppearance" parent="AppTextViewTextAppearance">
        <item name="android:textColor">@color/text_color_on_secondary_container</item>
        <!--<item name="android:textColorHint">@color/hint_text_color_on_secondary_container</item>-->
    </style>

    <style name="WordSearchImageButtonStyle" parent="AppImageButtonStyle">
        <item name="tint">?colorOnSecondaryContainer</item>
        <item name="android:src">@drawable/ic_cancel_24px</item>
    </style>
    <!-- ******************************************************************************** -->


    <!-- DiaryItemTitleEditFragment -->
    <!-- ******************************************************************************** -->
    <style name="DiaryItemSelectionHistoryTextViewStyle" parent="AppTextViewStyle">
        <item name="android:background">?colorSurface</item>
    </style>
    <!-- ******************************************************************************** -->


    <!-- SettingsFragment -->
    <!-- ******************************************************************************** -->
    <style name="SettingsItemBaseTextViewStyle" parent="AppTextViewStyle">
        <item name="android:paddingStart">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/fragment_settings_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_item_padding_vertical</item>
    </style>
    <style name="SettingsItemBaseTextViewTextAppearance" parent="AppTextViewTextAppearance">
        <item name="android:textSize">@dimen/fragment_settings_section_text_size</item>
    </style>


    <!-- SettingsItemTextView -->
    <style name="SettingsItemTextViewStyle" parent="SettingsItemBaseTextViewStyle">
        <item name="android:drawablePadding">@dimen/fragment_settings_item_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SettingsItemTextViewTextAppearance" parent="SettingsItemBaseTextViewTextAppearance"/>


    <!-- SettingsSectionTextView -->
    <style name="SettingsSectionTextViewStyle" parent="SettingsItemBaseTextViewStyle">
        <item name="android:gravity">bottom</item>
        <item name="android:background">?attr/colorSecondaryContainer</item>
    </style>
    <style name="SettingsSectionTextViewTextAppearance" parent="SettingsItemBaseTextViewTextAppearance">
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>


    <!-- SettingsItemValue -->
    <style name="SettingsItemValueTextViewStyle" parent="AppTextViewStyle">
        <item name="android:paddingStart">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/fragment_settings_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_item_padding_vertical</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:hint">@string/fragment_settings_item_value_not_set</item>
    </style>
    <style name="SettingsItemValueTextViewTextAppearance" parent="AppTextViewTextAppearance">
        <item name="android:textSize">@dimen/fragment_settings_item_value_text_size</item>
    </style>


    <!-- SettingsItemValueSwitch -->
    <style name="SettingsItemValueSwitchStyle" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:paddingStart">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/fragment_settings_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_item_padding_vertical</item>
    </style>

    <!-- ******************************************************************************** -->


    <!-- BottomSheetsCommon -->
    <!-- ******************************************************************************** -->
    <style name="BottomSheetTopBarBackgroundLayoutStyle" >
        <item name="android:background">?colorSecondaryContainer</item>
    </style>


    <style name="BottomSheetTopBarButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_transparent_button</item>

        <!-- HACK:"android:textColor"はTextAppearanceでは反映されない為、Styleに記述 -->
        <item name="android:textColor">?colorOnSecondaryContainer</item>
    </style>
    <style name="BottomSheetTopBarButtonTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
    </style>

    <!-- ******************************************************************************** -->


    <!-- NumberPickersDialogFragment -->
    <!-- ******************************************************************************** -->
    <!-- MEMO:NumberPickerのデフォルトスタイルなし -->
    <style name="NumberPickerStyle" >
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <!-- ******************************************************************************** -->


    <!-- MaterialCalendarDialog -->
    <!-- ******************************************************************************** -->
    <style name="MaterialCalendarThemeColorWhite" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="theme">@style/ThemeColorWhite</item>
        <!-- HACK:theme属性で指定しているstyleに"colorSurfaceContainerHigh"は含まれているが、反映されないので下記コードを記述して対応。
                  Material記事に記載されているapp:backgroundTintを設定しても反映されなかった。 -->
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_white_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorBlack" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="theme">@style/ThemeColorBlack</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_black_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorRed" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="theme">@style/ThemeColorRed</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_red_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorBlue" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="theme">@style/ThemeColorBlue</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_blue_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorGreen" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="theme">@style/ThemeColorGreen</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_green_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorYellow" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="theme">@style/ThemeColorYellow</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_yellow_surfaceContainerHigh</item>
    </style>

    <!-- ******************************************************************************** -->


    <!-- MaterialAlertDialog -->
    <!-- ******************************************************************************** -->
    <style name="MaterialAlertDialogThemeColorWhite" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="theme">@style/ThemeColorWhite</item>
        <!-- HACK:theme属性で指定しているstyleに"colorSurfaceContainerHigh"は含まれているが、反映されないので下記コードを記述して対応。
                  Material記事に記載されているapp:backgroundTintを設定しても反映されなかった。 -->
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_white_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorBlack" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="theme">@style/ThemeColorBlack</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_black_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorRed" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="theme">@style/ThemeColorRed</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_red_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorBlue" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="theme">@style/ThemeColorBlue</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_blue_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorGreen" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="theme">@style/ThemeColorGreen</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_green_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorYellow" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="theme">@style/ThemeColorYellow</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_yellow_surfaceContainerHigh</item>
    </style>

    <!-- ******************************************************************************** -->
</resources>
