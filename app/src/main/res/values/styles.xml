<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- ===================================================================================== -->
    <!-- region Common - View -->
    <!-- ===================================================================================== -->

    <!-- region Root View -->
    <style name="AppRootViewStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>
    <!-- endregion -->


    <!-- region App Bar Layout -->
    <style name="AppAppBarLayout">
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!-- endregion -->


    <!-- region Toolbar -->
    <!-- MEMO:Rippleの色、Tooltipsの背景色の変更方法が不明の為、AppThemeColorBlackのparentをDarkThemeにして対応。-->
    <style name="AppToolbarStyle" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleCentered">true</item>
        <item name="popupTheme">@style/AppToolbarPopupMenuStyle</item>
    </style>
    <style name="AppToolbarNavBackStyle" parent="AppToolbarStyle">
        <item name="navigationIcon">@drawable/ic_arrow_back_24px</item>
    </style>
    <style name="AppToolbarNavCloseStyle" parent="AppToolbarStyle">
        <item name="navigationIcon">@drawable/ic_close_24px</item>
    </style>
    <!-- MEMO:AppのThemeがLightモードの為、PopupMenuの文字が背景と同色になってしまい見えなくなる。対策として下記Style用意-->
    <style name="AppToolbarPopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:textColor">@color/text_color_on_surface</item>
    </style>
    <!-- endregion -->


    <!-- region Text View -->
    <style name="AppTextViewStyle">
        <!-- HACK:"android:textColorHint"はTextAppearanceでは反映されない為、Styleに記述 -->
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>
    </style>
    <style name="AppTextViewTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_color_on_surface</item>
        <!--<item name="android:textColorHint">@color/text_hint_color_on_background</item>-->
    </style>

    <style name="AppDropDownTextViewStyle" parent="AppTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>
    <style name="AppDropDownTextViewTextAppearance" parent="AppTextViewTextAppearance">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
    <!-- endregion -->


    <!-- region Text Input Layout -->
    <style name="AppTextInputLayoutOutlinedBoxStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="expandedHintEnabled">false</item>
        <item name="endIconTint">?colorOnSurfaceVariant</item>
    </style>
    <style name="AppTextInputLayoutClearTextStyle" parent="AppTextInputLayoutOutlinedBoxStyle">
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/ic_cancel_24px</item>
    </style>
    <style name="AppPersistentClearIconTextInputLayoutStyle" parent="AppTextInputLayoutOutlinedBoxStyle">
        <item name="endIconDrawable">@drawable/ic_cancel_24px</item>
    </style>

    <style name="AppTextInputLayoutDropdownMenuStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="expandedHintEnabled">false</item>
    </style>
    <!-- endregion -->


    <!-- region Text Input Edit Text -->
    <style name="AppTextInputEditTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <!-- HACK:下記属性はTextAppearanceでは反映されない為、Styleに記述 -->
        <item name="android:textColor">@color/text_color_on_surface</item>
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>
    </style>
    <style name="AppTextInputEditTextNoInputStyle" parent="AppTextInputEditTextStyle">
        <item name="android:focusable">false</item> <!-- MEMO:一回のタッチでクリック処理を起動 -->
        <item name="android:cursorVisible">false</item>
    </style>
    <style name="AppTextInputEditTextTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <!-- HACK:下記属性はTextAppearanceでは反映されない為、Styleに記述 -->
        <!--
        <item name="android:textColor">@color/text_color_on_surface</item>
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>
        -->
    </style>
    <!-- endregion -->

    
    <!-- region Ime Action Handling Text Input Edit Text -->
    <style name="AppImeActionHandlingTextInputEditTextStyle" parent="AppTextInputEditTextStyle">
    </style>
    <style name="AppImeDoneActionHandlingTextInputEditTextStyle" parent="AppImeActionHandlingTextInputEditTextStyle">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="AppImeActionHandlingTextInputEditTextTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <!-- HACK:下記属性はTextAppearanceでは反映されない為、Styleに記述 -->
        <!--
        <item name="android:textColor">@color/text_color_on_surface</item>
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>
        -->
    </style>
    <!-- endregion -->


    <!-- region Scrollable MultiLine Text Input Edit Text -->
    <style name="AppScrollableMultiLineTextInputEditTextStyle" parent="AppImeActionHandlingTextInputEditTextStyle">
        <item name="android:textColor">@color/text_color_on_surface</item>
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>

        <item name="android:gravity">top</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <style name="AppScrollableMultiLineTextInputEditTextTextAppearance" parent="AppImeActionHandlingTextInputEditTextTextAppearance">
        <!-- HACK:下記属性はTextAppearanceでは反映されない為、Styleに記述 -->
        <!--
        <item name="android:textColor">@color/text_color_on_surface</item>
        <item name="android:textColorHint">@color/hint_text_color_on_surface</item>
        -->
    </style>
    <!-- endregion -->


    <!-- region Auto Complete Text View -->
    <style name="AppAutoCompleteTextViewDropDownStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">none</item>
    </style>
    <style name="AppAutoCompleteTextViewDropDownTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">@dimen/fragment_diary_edit_text_size</item>
        <!-- HACK:"android:textColor"、"android:textColorHint"はStyle、TextAppearanceでは反映されない為、layoutに記述 -->
    </style>
    <!-- endregion -->


    <!-- region Circular Progress Indicator -->
    <style name="AppMediumCircularProgressIndicatorStyle" parent="Widget.Material3.CircularProgressIndicator.Medium">
        <item name="android:indeterminate">true</item>
    </style>
    <!-- endregion -->


    <!-- region Button -->
    <style name="AppTonalButtonStyle" parent="ThemeOverlay.Material3.Button.TonalButton">
    </style>
    <!-- endregion -->


    <!-- region Image Button -->
    <style name="AppImageButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">@drawable/ripple_effect_oval</item>
        <item name="tint">?attr/colorOnSurfaceVariant</item>
    </style>
    <!-- endregion -->


    <!-- region Image View -->
    <style name="AppImageViewStyle">
    </style>
    <!-- endregion -->


    <!-- region Floating Action Button -->
    <style name="AppMainFloatingActionButtonStyle" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
    </style>

    <style name="AppSubFloatingActionButtonStyle" parent="ThemeOverlay.Material3.FloatingActionButton.Surface">
    </style>
    <!-- endregion -->


    <!-- region Nested Scroll View -->
    <style name="AppNestedScrollViewStyle">
        <item name="android:scrollbars">vertical</item>
    </style>
    <!-- endregion -->


    <!-- region Recycler View -->
    <style name="AppRecyclerViewStyle">
        <item name="android:transitionGroup">true</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <!-- endregion -->

    
    <!-- region Number Pickers -->
    <style name="NumberPickerStyle" >
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>
    <!-- endregion -->

    <!-- ===================================================================================== -->
    <!-- endregion -->


    <!-- ===================================================================================== -->
    <!-- region Common - Dialog -->
    <!-- ===================================================================================== -->

    <!-- region Material Full Screen Dialog -->
    <style name="MaterialFullScreenDialogTheme" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- MEMO:下記はEdgeToEdgeに対応できるように設定 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <!-- endregion -->
    

    <!-- region Bottom Sheet Dialog -->
    <style name="AppBaseBottomSheetDialogStyle" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <!-- MEMO:下記はEdgeToEdgeに対応できるように設定 -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppBaseModalBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
    </style>

    <style name="AppBottomSheetDialogThemeColorWhite" parent="AppBaseBottomSheetDialogStyle">
        <item name="bottomSheetStyle">@style/AppModalBottomSheetThemeColorWhite</item>
    </style>

    <style name="AppModalBottomSheetThemeColorWhite" parent="AppBaseModalBottomSheetStyle">
        <item name="backgroundTint">@color/md_theme_color_white_surface</item>
    </style>

    <style name="AppBottomSheetDialogThemeColorBlack" parent="AppBaseBottomSheetDialogStyle">
        <item name="bottomSheetStyle">@style/AppModalBottomSheetThemeColorBlack</item>
    </style>

    <style name="AppModalBottomSheetThemeColorBlack" parent="AppBaseModalBottomSheetStyle">
        <item name="backgroundTint">@color/md_theme_color_black_surface</item>
    </style>

    <style name="AppBottomSheetDialogThemeColorRed" parent="AppBaseBottomSheetDialogStyle">
        <item name="bottomSheetStyle">@style/AppModalBottomSheetThemeColorRed</item>
    </style>

    <style name="AppModalBottomSheetThemeColorRed" parent="AppBaseModalBottomSheetStyle">
        <item name="backgroundTint">@color/md_theme_color_red_surface</item>
    </style>

    <style name="AppBottomSheetDialogThemeColorBlue" parent="AppBaseBottomSheetDialogStyle">
        <item name="bottomSheetStyle">@style/AppModalBottomSheetThemeColorBlue</item>
    </style>

    <style name="AppModalBottomSheetThemeColorBlue" parent="AppBaseModalBottomSheetStyle">
        <item name="backgroundTint">@color/md_theme_color_blue_surface</item>
    </style>

    <style name="AppBottomSheetDialogThemeColorGreen" parent="AppBaseBottomSheetDialogStyle">
        <item name="bottomSheetStyle">@style/AppModalBottomSheetThemeColorGreen</item>
    </style>

    <style name="AppModalBottomSheetThemeColorGreen" parent="AppBaseModalBottomSheetStyle">
        <item name="backgroundTint">@color/md_theme_color_green_surface</item>
    </style>

    <style name="AppBottomSheetDialogThemeColorYellow" parent="AppBaseBottomSheetDialogStyle">
        <item name="bottomSheetStyle">@style/AppModalBottomSheetThemeColorYellow</item>
    </style>

    <style name="AppModalBottomSheetThemeColorYellow" parent="AppBaseModalBottomSheetStyle">
        <item name="backgroundTint">@color/md_theme_color_yellow_surface</item>
    </style>

    <style name="BottomSheetTopBarBackgroundLayoutStyle" >
        <item name="android:background">?colorSecondaryContainer</item>
    </style>


    <style name="BottomSheetTopBarButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="android:background">@drawable/bg_transparent_button</item>

        <!-- HACK:"android:textColor"はTextAppearanceでは反映されない為、Styleに記述 -->
        <item name="android:textColor">?colorOnSecondaryContainer</item>
    </style>
    <style name="BottomSheetTopBarButtonTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
    </style>
    <!-- endregion -->

    
    <!-- region Material Calendar Dialog -->
    <style name="MaterialCalendarThemeColorWhite" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:theme">@style/ThemeColorWhite</item>
        <!-- HACK:theme属性で指定しているstyleに"colorSurfaceContainerHigh"は含まれているが、反映されないので下記コードを記述して対応。
                  Material記事に記載されているapp:backgroundTintを設定しても反映されなかった。 -->
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_white_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorBlack" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:theme">@style/ThemeColorBlack</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_black_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorRed" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:theme">@style/ThemeColorRed</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_red_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorBlue" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:theme">@style/ThemeColorBlue</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_blue_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorGreen" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:theme">@style/ThemeColorGreen</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_green_surfaceContainerHigh</item>
    </style>

    <style name="MaterialCalendarThemeColorYellow" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:theme">@style/ThemeColorYellow</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_yellow_surfaceContainerHigh</item>
    </style>
    <!-- endregion -->

    
    <!-- region Material Time Picker Dialog -->
    <style name="MaterialTimePickerThemeColorWhite" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorWhite</item>
    </style>

    <style name="MaterialTimePickerThemeColorBlack" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorBlack</item>
    </style>

    <style name="MaterialTimePickerThemeColorRed" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorRed</item>
    </style>

    <style name="MaterialTimePickerThemeColorBlue" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorBlue</item>
    </style>

    <style name="MaterialTimePickerThemeColorGreen" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorGreen</item>
    </style>

    <style name="MaterialTimePickerThemeColorYellow" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:theme">@style/ThemeColorYellow</item>
    </style>
    <!-- endregion -->


    <!-- region Material Alert Dialog -->
    <style name="MaterialAlertDialogThemeColorWhite" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:theme">@style/ThemeColorWhite</item>
        <!-- HACK:theme属性で指定しているstyleに"colorSurfaceContainerHigh"は含まれているが、反映されないので下記コードを記述して対応。
                  Material記事に記載されているapp:backgroundTintを設定しても反映されなかった。 -->
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_white_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorBlack" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:theme">@style/ThemeColorBlack</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_black_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorRed" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:theme">@style/ThemeColorRed</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_red_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorBlue" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:theme">@style/ThemeColorBlue</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_blue_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorGreen" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:theme">@style/ThemeColorGreen</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_green_surfaceContainerHigh</item>
    </style>

    <style name="MaterialAlertDialogThemeColorYellow" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:theme">@style/ThemeColorYellow</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_color_yellow_surfaceContainerHigh</item>
    </style>
    <!-- endregion -->
    
    <!-- ===================================================================================== -->
    <!-- endregion -->

    
    <!-- ===================================================================================== -->
    <!-- region Screen - Diary List & Word Search -->
    <!-- ===================================================================================== -->

    <!-- region Diary List -->
    <style name="DiaryListHeaderLayoutStyle">
        <item name="android:background">?attr/colorSecondary</item>
    </style>
    <style name="DiaryListHeaderTextViewStyle" parent="AppTextViewStyle">
    </style>
    <style name="DiaryListHeaderTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="DiaryListItemLayoutStyle" parent="AppRootViewStyle">
        <item name="android:background">?attr/colorSecondaryContainer</item>

        <!-- 波紋エフェクト設定 -->
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DiaryListTextViewStyle" parent="AppTextViewStyle">
        <item name="android:textColorHint">@color/hint_text_color_on_secondary_container</item>
    </style>
    <style name="DiaryListTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_color_on_secondary_container</item>
    </style>
    <!-- endregion -->

    <!-- region Search Bar -->
    <style name="WordSearchTextInputLayoutStyle" parent="AppTextInputLayoutClearTextStyle">
        <item name="endIconTint">?colorOnSecondaryContainer</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="WordSearchTextInputEditTextStyle" parent="AppImeActionHandlingTextInputEditTextStyle">
        <item name="android:textColor">@color/text_color_on_secondary_container</item>
        <item name="android:textColorHint">@color/hint_text_color_on_secondary_container</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/fragment_word_search_input_field_hint</item>
    </style>
    <style name="WordSearchTextInputEditTextTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <!-- HACK:下記属性はTextAppearanceでは反映されない為、Styleに記述 -->
        <!--
        <item name="android:textColor">@color/text_color_on_secondary_container</item>
        <item name="android:textColorHint">@color/hint_text_color_on_secondary_container</item>
        -->
        <item name="android:textSize">16sp</item>
    </style>
    <!-- endregion -->

    <!-- ===================================================================================== -->
    <!-- endregion -->


    <!-- ===================================================================================== -->
    <!-- region Screen - Settings -->
    <!-- ===================================================================================== -->
    <style name="SettingsItemBaseTextViewStyle" parent="AppTextViewStyle">
        <item name="android:paddingStart">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/fragment_settings_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_item_padding_vertical</item>
    </style>
    <style name="SettingsItemBaseTextViewTextAppearance" parent="AppTextViewTextAppearance">
        <item name="android:textSize">@dimen/fragment_settings_text_size</item>
    </style>

    <style name="SettingsItemTextViewStyle" parent="SettingsItemBaseTextViewStyle">
        <item name="android:drawablePadding">@dimen/fragment_settings_item_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SettingsItemTextViewTextAppearance" parent="SettingsItemBaseTextViewTextAppearance"/>

    <style name="SettingsSectionTextViewStyle" parent="SettingsItemBaseTextViewStyle">
        <item name="android:gravity">bottom</item>
        <item name="android:background">?attr/colorSecondaryContainer</item>
    </style>
    <style name="SettingsSectionTextViewTextAppearance" parent="SettingsItemBaseTextViewTextAppearance">
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="SettingsItemValueTextViewStyle" parent="AppTextViewStyle">
        <item name="android:paddingStart">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/fragment_settings_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_item_padding_vertical</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:hint">@string/fragment_settings_item_value_not_set</item>
    </style>
    <style name="SettingsItemValueTextViewTextAppearance" parent="SettingsItemBaseTextViewTextAppearance"/>

    <style name="SettingsItemValueSwitchStyle">
        <item name="android:paddingStart">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_settings_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/fragment_settings_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_item_padding_vertical</item>
    </style>

    <!-- ===================================================================================== -->
    <!-- endregion -->


    <!-- ===================================================================================== -->
    <!-- region Screen - Diary Item Title Edit -->
    <!-- ===================================================================================== -->

    <style name="DiaryItemSelectionHistoryTextViewStyle" parent="AppTextViewStyle">
        <item name="android:background">?colorSurface</item>
    </style>

    <!-- ===================================================================================== -->
    <!-- endregion -->
</resources>
