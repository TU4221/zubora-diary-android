<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nested_navigation_list">

    <navigation
        android:id="@+id/nested_navigation_list"
        app:startDestination="@+id/navigation_diary_list_fragment">

        <fragment
            android:id="@+id/navigation_diary_list_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.DiaryListFragment"
            tools:layout="@layout/fragment_diary_list"
            android:label="@string/title_list" >

            <action
                android:id="@+id/action_navigation_diary_list_fragment_to_word_search_fragment"
                app:destination="@id/navigation_word_search_fragment"/>

            <action
                android:id="@+id/action_navigation_diary_list_fragment_to_diary_show_fragment"
                app:destination="@id/nested_navigation_diary_show">
                <argument
                    android:name="date"
                    app:argType="java.time.LocalDate" />
            </action>

            <action
                android:id="@+id/action_navigation_diary_list_fragment_to_diary_edit_fragment"
                app:destination="@id/nested_navigation_diary_edit">
                <argument
                    android:name="is_start_diary_fragment"
                    app:argType="boolean" />
                <argument
                    android:name="should_load_diary"
                    app:argType="boolean" />
                <argument
                    android:name="diary_date"
                    app:argType="java.time.LocalDate" />
            </action>

            <action
                android:id="@+id/action_diary_list_fragment_to_start_year_month_picker_dialog"
                app:destination="@id/navigation_start_year_month_picker_dialog"/>

            <action
                android:id="@+id/action_diary_list_fragment_to_diary_delete_dialog"
                app:destination="@id/navigation_diary_delete_dialog_for_diary_list_fragment"/>

            <action
                android:id="@+id/action_diary_list_fragment_to_app_message_dialog"
                app:destination="@id/navigation_app_message_dialog">
                <argument
                    android:name="app_message"
                    app:argType="com.websarva.wings.android.zuboradiary.ui.model.AppMessage" />
            </action>

        </fragment>

        <dialog
            android:id="@+id/navigation_start_year_month_picker_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.StartYearMonthPickerDialogFragment">
            <argument
                android:name="max_year"
                app:argType="java.time.Year" />
            <argument
                android:name="min_year"
                app:argType="java.time.Year" />
        </dialog>

        <dialog
            android:id="@+id/navigation_diary_delete_dialog_for_diary_list_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryListDeleteDialogFragment">
            <argument
                android:name="date"
                app:argType="java.time.LocalDate" />

            <argument
                android:name="picture_uri"
                app:argType="android.net.Uri"
                app:nullable="true" />
        </dialog>

        <fragment
            android:id="@+id/navigation_word_search_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.WordSearchFragment"
            tools:layout="@layout/fragment_word_search" >

            <action
                android:id="@+id/action_navigation_word_search_fragment_to_diary_show_fragment"
                app:destination="@id/nested_navigation_diary_show">
                <argument
                    android:name="date"
                    app:argType="java.time.LocalDate" />
            </action>

            <action
                android:id="@+id/action_word_search_fragment_to_app_message_dialog"
                app:destination="@id/navigation_app_message_dialog">
                <argument
                    android:name="app_message"
                    app:argType="com.websarva.wings.android.zuboradiary.ui.model.AppMessage" />
            </action>

        </fragment>

    </navigation>

    <navigation
        android:id="@+id/nested_navigation_calendar"
        app:startDestination="@+id/navigation_calendar_fragment">

        <fragment
            android:id="@+id/navigation_calendar_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.CalendarFragment"
            tools:layout="@layout/fragment_calendar"
            android:label="@string/title_calendar" >

            <action
                android:id="@+id/action_navigation_calendar_fragment_to_diary_edit_fragment"
                app:destination="@id/nested_navigation_diary_edit">
                <argument
                    android:name="is_start_diary_fragment"
                    app:argType="boolean" />
                <argument
                    android:name="should_load_diary"
                    app:argType="boolean" />
                <argument
                    android:name="diary_date"
                    app:argType="java.time.LocalDate" />
            </action>

            <action
                android:id="@+id/action_calendar_fragment_to_app_message_dialog"
                app:destination="@id/navigation_app_message_dialog">
                <argument
                    android:name="app_message"
                    app:argType="com.websarva.wings.android.zuboradiary.ui.model.AppMessage" />
            </action>

        </fragment>

    </navigation>

    <navigation
        android:id="@+id/nested_navigation_settings"
        app:startDestination="@+id/navigation_settings_fragment">

        <fragment
            android:id="@+id/navigation_settings_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.SettingsFragment"
            tools:layout="@layout/fragment_settings" >

            <action
                android:id="@+id/action_navigation_settings_fragment_to_theme_color_picker_dialog"
                app:destination="@id/navigation_theme_color_picker_dialog"/>

            <action
                android:id="@+id/action_navigation_settings_fragment_to_calendar_start_day_picker_dialog"
                app:destination="@id/navigation_calendar_start_day_picker_dialog"/>

            <action
                android:id="@+id/action_navigation_settings_fragment_to_reminder_notification_time_picker_dialog"
                app:destination="@id/navigation_reminder_notification_time_picker_dialog"/>

            <action
                android:id="@+id/action_settings_fragment_to_permission_dialog"
                app:destination="@id/navigation_permission_dialog"/>

            <action
                android:id="@+id/action_settings_fragment_to_all_diaries_delete_dialog"
                app:destination="@id/navigation_all_diaries_delete_dialog"/>

            <action
                android:id="@+id/action_settings_fragment_to_all_settings_initialization_dialog"
                app:destination="@id/navigation_all_settings_initialization_dialog"/>

            <action
                android:id="@+id/action_settings_fragment_to_all_data_delete_dialog"
                app:destination="@id/navigation_all_data_delete_dialog"/>

            <action
                android:id="@+id/action_settings_fragment_to_app_message_dialog"
                app:destination="@id/navigation_app_message_dialog">
                <argument
                    android:name="app_message"
                    app:argType="com.websarva.wings.android.zuboradiary.ui.model.AppMessage" />
            </action>

            <action
                android:id="@+id/action_navigation_settings_fragment_to_open_source_licenses_fragment"
                app:destination="@id/navigation_open_source_licenses_fragment"/>

        </fragment>

        <dialog
            android:id="@+id/navigation_theme_color_picker_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.ThemeColorPickerDialogFragment">
        </dialog>

        <dialog
            android:id="@+id/navigation_calendar_start_day_picker_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.CalendarStartDayPickerDialogFragment">
            <argument
                android:name="initial_value"
                app:argType="java.time.DayOfWeek" />
        </dialog>

        <dialog
            android:id="@+id/navigation_reminder_notification_time_picker_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.ReminderNotificationTimePickerDialogFragment">
        </dialog>

        <dialog
            android:id="@+id/navigation_permission_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.PermissionDialogFragment">
            <argument
                android:name="permission_name"
                app:argType="string" />
        </dialog>

        <dialog
            android:id="@+id/navigation_all_diaries_delete_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.AllDiariesDeleteDialogFragment">
        </dialog>

        <dialog
            android:id="@+id/navigation_all_settings_initialization_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.AllSettingsInitializationDialogFragment">
        </dialog>

        <dialog
            android:id="@+id/navigation_all_data_delete_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.AllDataDeleteDialogFragment">
        </dialog>

        <dialog
            android:id="@+id/navigation_open_source_licenses_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.OpenSourceLicensesDialogFragment" >
        </dialog>

    </navigation>

    <navigation
        android:id="@+id/nested_navigation_diary_show"
        app:startDestination="@+id/navigation_diary_show_fragment">

        <fragment
            android:id="@+id/navigation_diary_show_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.DiaryShowFragment"
            tools:layout="@layout/fragment_diary_show" >
            <argument
                android:name="date"
                app:argType="java.time.LocalDate" />

            <action
                android:id="@+id/action_navigation_diary_show_fragment_to_diary_edit_fragment"
                app:destination="@id/nested_navigation_diary_edit">
                <argument
                    android:name="is_start_diary_fragment"
                    app:argType="boolean" />
                <argument
                    android:name="should_load_diary"
                    app:argType="boolean" />
                <argument
                    android:name="diary_date"
                    app:argType="java.time.LocalDate" />
            </action>

            <action
                android:id="@+id/action_diary_show_fragment_to_diary_loading_failure_dialog"
                app:destination="@id/navigation_diary_loading_failure_dialog_for_diary_show_fragment"/>

            <action
                android:id="@+id/action_diary_show_fragment_to_diary_delete_dialog"
                app:destination="@id/navigation_diary_delete_dialog_for_diary_show_fragment"/>

            <action
                android:id="@+id/action_diary_show_fragment_to_app_message_dialog"
                app:destination="@id/navigation_app_message_dialog">
                <argument
                    android:name="app_message"
                    app:argType="com.websarva.wings.android.zuboradiary.ui.model.AppMessage" />
            </action>

        </fragment>

        <dialog
            android:id="@+id/navigation_diary_loading_failure_dialog_for_diary_show_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryLoadingFailureDialogFragment">
            <argument
                android:name="date"
                app:argType="java.time.LocalDate" />
        </dialog>

        <dialog
            android:id="@+id/navigation_diary_delete_dialog_for_diary_show_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryDeleteDialogFragment">
            <argument
                android:name="parameters"
                app:argType="com.websarva.wings.android.zuboradiary.ui.model.parameters.DiaryDeleteParameters" />
        </dialog>

    </navigation>

    <navigation
        android:id="@+id/nested_navigation_diary_edit"
        app:startDestination="@+id/navigation_diary_edit_fragment">

        <fragment
            android:id="@+id/navigation_diary_edit_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.DiaryEditFragment"
            tools:layout="@layout/fragment_diary_edit"
            android:label="@string/title_settings" >
            <argument
                android:name="is_start_diary_fragment"
                app:argType="boolean" />
            <argument
                android:name="should_load_diary"
                app:argType="boolean" />
            <argument
                android:name="diary_date"
                app:argType="java.time.LocalDate" />

            <action
                android:id="@+id/action_diary_edit_fragment_to_select_item_title_fragment"
                app:destination="@id/navigation_diary_item_title_edit_fragment"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_diary_show_fragment_pattern_1"
                app:destination="@id/nested_navigation_diary_show"
                app:popUpTo="@id/navigation_diary_show_fragment"
                app:popUpToInclusive="true">
                <argument
                    android:name="date"
                    app:argType="java.time.LocalDate" />
            </action>

            <action
                android:id="@+id/action_diary_edit_fragment_to_diary_show_fragment_pattern_2"
                app:destination="@id/nested_navigation_diary_show"
                app:popUpTo="@id/navigation_diary_edit_fragment"
                app:popUpToInclusive="true">
                <argument
                    android:name="date"
                    app:argType="java.time.LocalDate" />
            </action>

            <action
                android:id="@+id/action_diary_edit_fragment_to_diary_loading_dialog"
                app:destination="@id/navigation_diary_loading_dialog"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_diary_loading_failure_dialog"
                app:destination="@id/navigation_diary_loading_failure_dialog_for_diary_edit_fragment"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_diary_update_dialog"
                app:destination="@id/navigation_diary_update_dialog"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_diary_delete_dialog"
                app:destination="@id/navigation_diary_delete_dialog_for_diary_edit_fragment"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_date_picker_dialog"
                app:destination="@id/navigation_date_picker_dialog"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_weather_info_fetch_dialog"
                app:destination="@id/navigation_weather_info_fetch_dialog"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_diary_item_delete_dialog"
                app:destination="@id/navigation_diary_item_delete_dialog"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_diary_picture_delete_dialog"
                app:destination="@id/navigation_diary_picture_delete_dialog"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_exit_without_diary_saving_confirmation_dialog"
                app:destination="@id/navigation_exit_without_diary_saving_dialog"/>

            <action
                android:id="@+id/action_diary_edit_fragment_to_app_message_dialog"
                app:destination="@id/navigation_app_message_dialog">
                <argument
                    android:name="app_message"
                    app:argType="com.websarva.wings.android.zuboradiary.ui.model.AppMessage" />
            </action>

        </fragment>

        <dialog
            android:id="@+id/navigation_diary_loading_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryLoadingDialogFragment">
            <argument
                android:name="parameters"
                app:argType="com.websarva.wings.android.zuboradiary.ui.model.parameters.DiaryLoadingParameters" />
        </dialog>

        <dialog
            android:id="@+id/navigation_diary_loading_failure_dialog_for_diary_edit_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryLoadingFailureDialogFragment">
            <argument
                android:name="date"
                app:argType="java.time.LocalDate" />
        </dialog>

        <dialog
            android:id="@+id/navigation_diary_update_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryUpdateDialogFragment">
            <argument
                android:name="parameters"
                app:argType="com.websarva.wings.android.zuboradiary.ui.model.parameters.DiaryUpdateParameters" />
        </dialog>

        <dialog
            android:id="@+id/navigation_diary_delete_dialog_for_diary_edit_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryDeleteDialogFragment">
            <argument
                android:name="parameters"
                app:argType="com.websarva.wings.android.zuboradiary.ui.model.parameters.DiaryDeleteParameters" />
        </dialog>

        <dialog
            android:id="@+id/navigation_date_picker_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DatePickerDialogFragment">
            <argument
                android:name="date"
                app:argType="java.time.LocalDate" />
        </dialog>

        <dialog
            android:id="@+id/navigation_weather_info_fetch_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.WeatherInfoFetchDialogFragment">
            <argument
                android:name="parameters"
                app:argType="com.websarva.wings.android.zuboradiary.ui.model.parameters.WeatherInfoFetchParameters" />
        </dialog>

        <dialog
            android:id="@+id/navigation_diary_item_delete_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryItemDeleteDialogFragment">
            <argument
                android:name="parameters"
                app:argType="com.websarva.wings.android.zuboradiary.ui.model.parameters.DiaryItemDeleteParameters" />
        </dialog>

        <dialog
            android:id="@+id/navigation_diary_picture_delete_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryPictureDeleteDialogFragment">
        </dialog>

        <dialog
            android:id="@+id/navigation_exit_without_diary_saving_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.ExitWithoutDiarySavingDialogFragment">
            <argument
                android:name="parameters"
                app:argType="com.websarva.wings.android.zuboradiary.ui.model.parameters.NavigatePreviousParameters" />
        </dialog>

        <fragment
            android:id="@+id/navigation_diary_item_title_edit_fragment"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.DiaryItemTitleEditFragment"
            tools:layout="@layout/fragment_diary_item_title_edit" >
            <argument
                android:name="item_number"
                app:argType="com.websarva.wings.android.zuboradiary.data.model.ItemNumber" />
            <argument
                android:name="item_title"
                app:argType="string" />

            <action
                android:id="@+id/action_diary_item_title_edit_fragment_to_diary_edit_fragment"
                app:popUpTo="@id/navigation_diary_edit_fragment"
                app:popUpToInclusive="false"/>

            <action
                android:id="@+id/action_diary_item_title_edit_fragment_to_diary_item_title_delete_dialog"
                app:destination="@id/navigation_diary_item_title_delete_dialog"/>

            <action
                android:id="@+id/action_diary_item_title_edit_fragment_to_app_message_dialog"
                app:destination="@id/navigation_app_message_dialog">
                <argument
                    android:name="app_message"
                    app:argType="com.websarva.wings.android.zuboradiary.ui.model.AppMessage" />
            </action>

        </fragment>

        <dialog
            android:id="@+id/navigation_diary_item_title_delete_dialog"
            android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.DiaryItemTitleDeleteDialogFragment">
            <argument
                android:name="item_position"
                app:argType="integer" />
            <argument
                android:name="item_title"
                app:argType="string" />
        </dialog>

    </navigation>

    <dialog
        android:id="@+id/navigation_app_message_dialog"
        android:name="com.websarva.wings.android.zuboradiary.ui.fragment.dialog.AppMessageDialogFragment">
        <argument
            android:name="app_message"
            app:argType="com.websarva.wings.android.zuboradiary.ui.model.AppMessage" />
    </dialog>

</navigation>
